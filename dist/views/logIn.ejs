<%- include('particles/navigation_home.ejs') %>

  <div class="form">

    <ul class="tab-group">
      <li class="tab active"><a href="/logIn">Войти</a></li>
      <li class="tab"><a href="/register">Зарегистрироваться</a></li>
    </ul>

    <div class="tab-content">
      <h2>С возвращением!</h2>
      <form action="/auth" method="post">

        <div class="field-wrap">
          <label class="form-group__label" for="text">

          </label>
          <input type="text" id="title" name="username" required autocomplete="off" placeholder="Name" />
        </div>

        <div class="field-wrap">
          <label class="form-group__label" for="password">

          </label>
          <input type="password" id="password" name="password" required autocomplete="off" placeholder="Password" />
        </div>

        <% if (errUsername==1){ %>
          <p class="errUsername">Неправильное имя пользователя или пароль</p>
        <% } %>

          <!-- <p class="forgot"><a href="#">Забыли пароль?</a></p> -->

          <button class="button button-block" type="submit" value="Создать">Войти</button>

      </form>

    </div>

  </div>

  <%- include('particles/footer.ejs') %>